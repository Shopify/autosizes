{
  "name": "autosizes",
  "version": "1.0.0",
  "description": "A polyfill for the sizes=\"auto\" attribute on images",
  "main": "autosizes.js",
  "scripts": {
    "test": "playwright test",
    "test:report": "playwright test --reporter=html",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "minify": "terser src/autosizes.js -o dist/autosizes.min.js --compress --mangle"
  },
  "keywords": [
    "polyfill",
    "responsive",
    "images",
    "sizes",
    "auto",
    "lazy-loading"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.42.1",
    "@shopify/prettier-config": "^1.1.4",
    "terser": "^5.39.0"
  },
  "prettier": "@shopify/prettier-config"
}
